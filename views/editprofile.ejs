<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Product</title>
    <link rel="shortcut icon" type="image/png" href="../assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="../assets/css/styles.min.css" />
    <style>
        #edit img{
            border-radius: 50px;
        }
        #profileId{
            display: none;
        }
    </style>
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="./index.html" class="text-nowrap logo-img">
                        <img src="../assets/images/logos/dark-logo.svg" width="180" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <a href="viewprofile">VIEW PROFILE</a>
                        </li>
                </nav>
            </div>
        </aside>
        <div class="body-wrapper">
       

            <div class="container-fluid">
                <div class="container-fluid">


                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title fw-semibold mb-4">Edit Profile Page ...</h5>
                            <div class="card">
                                <div class="card-body ">

                                    <!-- categary form -->

                                    <form method="post" action="updateprofile" enctype="multipart/form-data">
                                        <input type="text" value="<%=hello.id%>" name="profileId" id="profileId">
                                        <h1>Edit Your Profile</h1>

                                        <div class="mb-3 d-flex" id="edit" >
                                            <img src="<%=hello.image%>" alt="" height="100px" width="100px">
                                            <h4 class="ms-4 mt-4"><b>Update Your Profile Picture And Username..</b>  <br><%=hello.username%></h4>
                                        </div>
                                        
                                        <div class="mb-3 " id="edit">
                                            <label for="exampleInputEmail1" class="form-label">Image:-</label>
                                            <input type="file" class="form-control" name="image">
                                        </div>

                                        <div class="mb-3">
                                            <label for="exampleInputEmail1" class="form-label">User Name :-</label>
                                            <input type="text" class="form-control" name="username" value="<%=hello.username%>">
                                        </div>

                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">User EmailAddress :-</label>
                                            <input type="text" class="form-control" name="email" value="<%=hello.email%>">
                                        </div>

                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">Country :-</label>
                                            <input type="text" class="form-control" name="country" value="<%=hello.country%>">
                                        </div>

                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">State:-</label>
                                            <input type="text" class="form-control" name="state" value="<%=hello.state%>">
                                        </div>

                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">City:-</label>
                                            <input type="text" class="form-control" name="city" value="<%=hello.city%>">
                                        </div>
                              
                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">ZIP CODE:-</label>
                                            <input type="text" class="form-control" name="code" value="<%=hello.code%>">
                                        </div>

                                        

                                        <button type="submit" class="btn btn-primary">Update Profile</button> 
                                    </form>

                                    <!-- categary form -->


                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/js/sidebarmenu.js"></script>
    <script src="../assets/js/app.min.js"></script>
    <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
</body>

</html>